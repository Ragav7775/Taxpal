{
  "compilerOptions": {
    "target": "ES2020",                        // Modern JS output
    "module": "nodenext",                      // Required for Node.js
    "outDir": "./dist",                        // Output directory for compiled JS
    "rootDir": "./src",                        // Root of your TS source files
    "moduleResolution": "node16",                // Use Node.js module resolution logic
    "esModuleInterop": true,                   // Allows default imports from CommonJS
    "forceConsistentCasingInFileNames": true,  // Ensures consistent imports
    "strict": true,                            // Enables all strict type-checking options
    "skipLibCheck": true,                      // Speeds up build by skipping type check on node_modules
    "resolveJsonModule": true,                 // Allow import of .json files
    "types": ["node"],                         // Include Node.js types
    "noEmitOnError": true,                      // Avoid emitting code if there's a type error
    "typeRoots": ["./node_modules/@types", "./src/types"],
    // "ignoreDeprecations": "6.0"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}